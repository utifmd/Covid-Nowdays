<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CovidNowdays" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
<!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
<!--        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->
    </style>

    <style name="Widget.CovidNowdays.Toolbar" parent="Widget.AppCompat.Toolbar">
        <!--<item name="android:background">@color/cardview_shadow_end_color</item>-->
        <item name="android:background">@color/white</item>
        <item name="android:theme">@style/Theme.CovidNowdays</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="titleTextAppearance">@style/TextAppearance.CovidNowdays.Toolbar</item>
    </style>

    <style name="Widget.CovidNowdays.Toolbar.Dark" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/Theme.CovidNowdays</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="titleTextAppearance">@style/TextAppearance.CovidNowdays.Toolbar</item>
    </style>

    <style name="TextAppearance.CovidNowdays.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:color">@color/white</item>
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/item_large</item>
        <item name="android:layout_marginBottom">@dimen/item_large</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash_brand_logo</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>